@model bank.Data.Models.Contract

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Удаление</h1>

<h3>Вы уверены, что хотите удалить контракт?</h3>
<div>
    <h4>Контракт</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <h6>id</h6>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.id)
        </dd>
        <dt class = "col-sm-2">
            <h6>Дата</h6>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.dateOfSigning)
        </dd>
        <dt class = "col-sm-2">
            <h6>id клиента</h6>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.clientID)
        </dd>
        <dt class = "col-sm-2">
            <h6>id сотрудника</h6>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.employeeID)
        </dd>
    </dl>
    
    <form asp-action="Delete" method="post">
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        @Html.ActionLink("Назад", "Index")
    </form>
</div>
