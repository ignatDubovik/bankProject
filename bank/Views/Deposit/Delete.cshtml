@model bank.Data.Models.Deposit

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Удаление</h1>

<h3>Вы уверены, что хотите удалить вклад?</h3>
<div>
    <h4>Вклад</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <h6>id</h6>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.id)
        </dd>
        <dt class = "col-sm-2">
            <h6>Начальная сумма</h6>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.initialMoney)
        </dd>
        <dt class = "col-sm-2">
            <h6>Дата открытия</h6>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.dateOfOpening)
        </dd>
        <dt class = "col-sm-2">
            <h6>Планируемая сумма</h6>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.plannedFinalAmountOfMoney)
        </dd>
        <dt class = "col-sm-2">
            <h6>id типа</h6>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.depositTypeID)
        </dd>
        <dt class = "col-sm-2">
            <h6>id контракта</h6>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.contractNumber)
        </dd>
        <dt class = "col-sm-2">
            <h6>id клиента</h6>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.clientID)
        </dd>
    </dl>
    
    <form asp-action="Delete" method="post">
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        @Html.ActionLink("Назад", "Index")
    </form>
</div>
