@model bank.Data.Models.Deposit

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Подробная информация</h1>

<div>
    <h4>Вклад</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            <h6>id</h6>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.id)
        </dd>
        <dt class = "col-sm-2">
            <h6>Начальная сумма</h6>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.initialMoney)
        </dd>
        <dt class = "col-sm-2">
            <h6>Дата открытия</h6>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.dateOfOpening)
        </dd>
        <dt class = "col-sm-2">
            <h6>Планируемая сумма</h6>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.plannedFinalAmountOfMoney)
        </dd>
        <dt class = "col-sm-2">
            <h6>id типа</h6>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.depositTypeID)
        </dd>
        <dt class = "col-sm-2">
            <h6>id контракта</h6>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.contractNumber)
        </dd>
        <dt class = "col-sm-2">
            <h6>id клиента</h6>
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.clientID)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Редактировать", "Edit", new { id = Model.id }) |
    @Html.ActionLink("Назад", "Index")
</div>
